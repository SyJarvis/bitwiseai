{
  "_comment": "BitwiseAI 配置文件示例",
  "_note": "API 密钥可以在此处配置，也可以使用 .env 文件中的环境变量",
  "llm": {
    "api_key": "your-llm-api-key",
    "base_url": "https://your-llm-api-endpoint/v1",
    "model": "MiniMax-M2.1",
    "temperature": 0.7
  },
  "embedding": {
    "api_key": "your-embedding-api-key",
    "base_url": "https://your-embedding-api-endpoint/v1",
    "model": "text-embedding-3-small"
  },
  "memory": {
    "enabled": true,
    "workspace_dir": "~/.bitwiseai",
    "db_path": "~/.bitwiseai/memory.db",
    "vector_enabled": true,
    "chunking": {
      "tokens": 400,
      "overlap": 80
    },
    "hybrid_search": {
      "enabled": true,
      "vector_weight": 0.7,
      "text_weight": 0.3,
      "min_score": 0.5
    },
    "embedding_cache": {
      "enabled": true,
      "max_entries": 10000
    },
    "sync": {
      "watch": true,
      "watch_debounce_ms": 1000,
      "on_search": true
    },
    "short_term": {
      "enabled": true,
      "retention_days": 7,
      "compaction_strategy": "summarize"
    }
  },
  "rag": {
    "similarity_threshold": 0.85,
    "save_chunks": false,
    "chunks_dir": "~/.bitwiseai/chunks",
    "enable_document_name_matching": true,
    "document_name_match_threshold": 0.3
  },
  "system_prompt": "你是 BitwiseAI，专注于硬件指令验证和调试日志分析的 AI 助手。你可以帮助用户：\n1. 解析和分析硬件调试日志\n2. 验证指令计算的正确性\n3. 发现潜在的问题和异常\n4. 提供基于规范文档的专业建议",
  "skills": {
    "external_directories": [
      "~/.bitwiseai/skills"
    ],
    "auto_load": ["asm-parser", "hex-converter"],
    "index_to_memory": true
  },
  "tools": []
}
